@using System.Data.SqlClient
@model IEnumerable<MVCOpdracht.Models.Component>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Components", FormMethod.Get))
    {
        <p>
            <!--http://www.asp.net/mvc/overview/getting-started/introduction/adding-search-->
            Zoeken op naam: @Html.TextBox("SearchString") <input type="submit" value="Zoeken" />
            Categorie: @Html.DropDownList("componentsCategorie", "All")
        </p>
    }
    
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Naam", "Index", new {SortOrder = ViewBag.NameSortParm})
        </th>
        <th>
            @Html.ActionLink("Categorie", "Index", new { SortOrder = ViewBag.componentsCategorieSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aantal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prijs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aankoop)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categorie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aantal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prijs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aankoop)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
